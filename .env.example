# ============================================
# OpenRouter Configuration (REQUIRED)
# ============================================
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter API endpoint (default)
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions

# Recommended low-cost models for demo ($6 credits):
# - google/gemini-flash-1.5 (very cheap, fast)
# - anthropic/claude-3-haiku (quality + cost balance)
# - meta-llama/llama-3.1-8b-instruct (ultra cheap)
# - mistralai/mistral-7b-instruct (cheap + decent)
OPENROUTER_MODEL=google/gemini-flash-1.5

# Enable streaming responses (1 = enabled, 0 = disabled)
OPENROUTER_ENABLE_STREAMING=1

# ============================================
# Pinecone Configuration (REQUIRED)
# ============================================
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=jarvis-knowledge

# Embedding model dimension (384 for sentence-transformers/all-MiniLM-L6-v2)
PINECONE_DIMENSION=384

# ============================================
# Optional: OpenAI for embeddings (alternative to local)
# ============================================
# If you want to use OpenAI embeddings instead of local sentence-transformers
# OPENAI_API_KEY=your_openai_api_key_here
# EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# Cost Control Settings
# ============================================
# Maximum tokens per request (lower = cheaper)
MAX_TOKENS=256

# Temperature (0.0 = deterministic, 1.0 = creative)
TEMPERATURE=0.3

# Maximum token budget per request (warning threshold)
TOKEN_BUDGET_WARNING=500

# Enable query result caching (reduces Pinecone calls)
ENABLE_CACHE=1
CACHE_TTL_SECONDS=300

# ============================================
# RAG Configuration
# ============================================
# Number of relevant chunks to retrieve from Pinecone
TOP_K_RESULTS=3

# Number of conversation messages to include in context
CONVERSATION_HISTORY_LENGTH=5

# ============================================
# Database Configuration (SQLite default)
# ============================================
# For Supabase, uncomment and fill:
# SUPABASE_URL=your_supabase_url
# SUPABASE_KEY=your_supabase_anon_key
# DATABASE_TYPE=supabase

DATABASE_TYPE=sqlite
SQLITE_DB_PATH=./data/jarvis.db

# ============================================
# Optional: Whisper Transcription
# ============================================
# If using a remote Whisper server:
# WHISPER_API_URL=http://localhost:9000/asr
# WHISPER_API_KEY=optional_key

# ============================================
# Application Settings
# ============================================
NEXT_PUBLIC_APP_NAME=Jarvis AI Assistant
NEXT_PUBLIC_AUTHOR_NAME=Krishna Bantola
NEXT_PUBLIC_GITHUB_URL=https://github.com/krishnabantola
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/in/krishnabantola
NEXT_PUBLIC_DEMO_VIDEO_URL=https://www.youtube.com/embed/your_demo_video_id

# Weather API (free tier): https://openweathermap.org/api
WEATHER_API_KEY=your_openweather_api_key
WEATHER_CITY=London

# News API (free tier): https://newsapi.org/
NEWS_API_KEY=your_newsapi_key
